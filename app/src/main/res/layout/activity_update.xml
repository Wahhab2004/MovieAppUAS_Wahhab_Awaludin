<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg12">


    <ImageView
        android:id="@+id/backHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_ios_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:layout_marginStart="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="Update Movie"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Title Movie"
            android:layout_marginHorizontal="30dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAllCaps="true"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/titleMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="30dp"
            android:hint="title"
            android:textColorHint="@color/gray"
            android:textColor="@color/white"
            android:padding="20dp"
            android:background="@drawable/rounder_corner"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Genre Movie"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="30dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAllCaps="true"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/genreMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="30dp"
            android:hint="genre"
            android:textColorHint="@color/gray"
            android:textColor="@color/white"
            android:padding="20dp"
            android:background="@drawable/rounder_corner"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duration"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="30dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAllCaps="true"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/durationMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="30dp"
            android:hint="duration"
            android:textColorHint="@color/gray"
            android:padding="20dp"
            android:textColor="@color/white"
            android:background="@drawable/rounder_corner"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Image"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="30dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAllCaps="true"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/imageMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="30dp"
            android:hint="image url"
            android:textColorHint="@color/gray"
            android:padding="20dp"
            android:textColor="@color/white"
            android:background="@drawable/rounder_corner"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="description"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="30dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAllCaps="true"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/descriptionMovie"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="30dp"
            android:hint="description"
            android:textColorHint="@color/gray"
            android:padding="20dp"
            android:textColor="@color/white"
            android:background="@drawable/rounder_corner"/>



    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submitAddMovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp"
        android:text="Submit"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_box"
        android:backgroundTint="@color/yellow"
        android:textColor="@color/white"
        android:layout_marginTop="15dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>

